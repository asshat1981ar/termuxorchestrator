{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://termux-orchestrator.local/appspec.schema.json",
  "title": "AppSpec",
  "description": "Application specification for mobile app generation",
  "type": "object",
  "required": [
    "name",
    "platform", 
    "framework",
    "pages",
    "features",
    "data"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$",
      "minLength": 2,
      "maxLength": 50,
      "description": "Application name (alphanumeric, dashes, underscores)"
    },
    "platform": {
      "type": "string",
      "enum": ["android", "ios", "web"],
      "description": "Target platform"
    },
    "framework": {
      "type": "string",
      "enum": ["react-native", "flutter", "compose", "ionic"],
      "description": "Development framework"
    },
    "pages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["screen", "modal", "tab", "stack"]
          },
          "description": {
            "type": "string"
          },
          "components": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "description": "Application screens and pages"
    },
    "features": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object", 
        "required": ["name", "category"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "category": {
            "type": "string",
            "enum": ["ui", "data", "auth", "media", "integration", "utility"]
          },
          "description": {
            "type": "string"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "default": 3
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "description": "Application features to implement"
    },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string", 
            "enum": ["sqlite", "rest-api", "graphql", "firebase", "file-system", "secure-storage"]
          },
          "schema": {
            "type": "object"
          },
          "endpoints": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "description": "Data sources and storage"
    },
    "apis": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "url"],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "auth": {
            "type": "string",
            "enum": ["none", "api-key", "oauth", "basic"]
          },
          "description": {
            "type": "string"
          }
        }
      },
      "description": "External API integrations"
    },
    "theme": {
      "type": "object",
      "properties": {
        "primaryColor": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$"
        },
        "darkMode": {
          "type": "boolean",
          "default": false
        },
        "typography": {
          "type": "string"
        }
      },
      "description": "App theming configuration"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "default": "1.0.0"
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "orchestratorVersion": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}